import math

r1 = int(input("Введите радиус 1-го круга R1 (R1>R2)!->"))
r2 = int(input("Введите радиус 2-го круга R2->"))
while r1 < r2:
    r1 = int(input("Введите радиус 1-го круга R1->"))
    r2 = int(input("Введите радиус 2-го круга R2->"))

S1 = math.pi * math.pow(r1, 2)
S2 = math.pi * math.pow(r2, 2)
S3 = S1 - S2

print(f"Площадь S1 = {S1} \nПлощадь S2 = {S2}\nПлощадь S3 кольца = {S3}, внешний "
      f"радиус которого равен {r1}, а внутренний радиус равен {r2}")
